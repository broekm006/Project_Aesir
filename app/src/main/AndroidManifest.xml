<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uva.aesir">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.ExerciseActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activity.SpecificActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activity.TimerActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activity.ResultsActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activity.PresetActivity" android:screenOrientation="portrait"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".Activity.NewListActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Preset_detail" android:screenOrientation="portrait"/>
        <activity android:name=".Activity.GetJSONActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activity.CardioActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activity.PresetExercise" android:screenOrientation="portrait"/>
        <activity android:name=".Activity.ResultsListActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activity.ResultsCardioActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activity.ResultsWeightsActivity" android:screenOrientation="portrait"></activity>
    </application>

</manifest>