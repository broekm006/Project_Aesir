<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uva.aesir">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ExerciseActivity" android:screenOrientation="portrait"/>
        <activity android:name=".SpecificActivity" android:screenOrientation="portrait"/>
        <activity android:name=".TimerActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ResultsActivity" android:screenOrientation="portrait"/>
        <activity android:name=".PresetActivity" android:screenOrientation="portrait"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".NewListActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Preset_detail" android:screenOrientation="portrait"/>
        <activity android:name=".GetJSONActivity" android:screenOrientation="portrait"/>
        <activity android:name=".CardioActivity" android:screenOrientation="portrait"/>
        <activity android:name=".PresetExercise" android:screenOrientation="portrait"/>
        <activity android:name=".ResultsListActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ResultsCardioActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ResultsWeightsActivity" android:screenOrientation="portrait"></activity>
    </application>

</manifest>